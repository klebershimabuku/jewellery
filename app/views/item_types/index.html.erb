<div class="align_to_center"><%= paginate @item_types %></div>
<div id="custom_table">
  <table class="default_table" style="width: 30%">
    <tr>
      <th><%=t :module_items_types %></th>
    </tr>
    <% if @item_types.present? %>
    <tr>
      <th>Title</th>
    </tr>
    <% @item_types.each do |item_type| %>
    <tr>
      <td><%= on_the_spot_edit item_type, :title %>
      <% if can? :destroy, ItemType %>
      <%= link_to 'Destroy', item_type, :confirm => 'Are you sure?', :method => :delete, :class => 'float_to_right negative pill button' %></td>
      <% end %>
    </tr>
    <% end %>
    <% else %>
    <tr>
      <td><%=t(:no_item_type_found) %><%= link_to t(:start_adding), new_item_type_path %><td>
    </tr>
    <% end %>
    
    <% if can? :create, ItemType %>
    <%= form_for(@item_type, :as => :item_type, :url => { :action => 'create'}) do |f| %>
      <tr>
        <td><%= f.text_field :title %>
        <%= button_for "Save Item Type", :class => 'big positive pill button', :button_type => 'submit' %></td>
      </tr>
    <% end %>
    <% end %>
    
  </table>
</div>
<div class="align_to_center"><%= paginate @item_types %></div>

