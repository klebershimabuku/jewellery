<div id="custom_table">
  <table class="default_table">
    <tr>
      <th colspan="2"><%=t :module_items_types %></th>
    </tr>
    <% if @item_types.present? %>
    <tr>
      <th>Title</th>
      <th></th>
    </tr>
    <% @item_types.each do |item_type| %>
    <tr>
      <td><%= on_the_spot_edit item_type, :title %></td>
      <td><%= link_to 'Destroy', item_type, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
    <% end %>
    <% else %>
    <tr>
      <td><%=t(:no_items_found) %><%= link_to t(:start_adding), new_item_type_path %><td>
    </tr>
    <% end %>
    
    <%= form_for(:item_type, @item_type, :url => { :action => 'create'}) do |f| %>
      <tr>
        <td><%= f.text_field :title %></td>
        <td><%= f.submit %></td>
      </tr>
    <% end %>
    
  </table>
</div>

<br />

<%= link_to t(:btn_add), new_item_type_path %>
